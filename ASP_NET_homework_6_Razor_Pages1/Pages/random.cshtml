@page
@model ASP_NET_homework_6_Razor_Pages1.Pages.randomModel
@{
    Random rand = new Random(); // New random for feauture use
    int current = rand.Next(0, 3); // Variable to store current choise of random number of restaurant

    string[] restaurantName = new string[]{
        "Neptune",
        "Space",
        "Chili Chile"
    };

    string[] headerColor = new string[]{
        "#25f4d5",
        "#5f7672",
        "#ef6c22"
    };

    string[] backgroundPhoto = new string[]{
        "https://cdn.pixabay.com/photo/2019/09/12/15/21/resort-4471852_1280.jpg",
        "https://cdn.pixabay.com/photo/2016/03/27/21/34/restaurant-1284351_1280.jpg",
        "https://cdn.pixabay.com/photo/2020/03/13/11/54/food-4927729_640.jpg"
    };

    string[] eMail = new string[]{
        "neptune@restaurant.com",
        "space@restaurant.com",
        "chiliChile@restaurant.com"
    };

    string[] phone = new string[]{
        "123 888 999 21",
        "21 2123 5577 11",
        "888 777 234 411"
    };

    int dish1index = rand.Next(0, 3);
    int dish2index = rand.Next(3,6);
    int dish3index = rand.Next(6, 9);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Name</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            color: #343a40;
        }

        header {
            background: @headerColor[current];
            color: white;
            padding: 20px 0;
            text-align: center;
        }

        nav {
            margin: 20px 0;
        }

            nav a {
                margin: 0 15px;
                color: white;
                text-decoration: none;
                font-weight: bold;
            }

        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
        }

        .hero {
            background: url('@backgroundPhoto[current]') no-repeat center center / cover;
            height: 400px;
            position: relative;
            color: white;
            text-align: center;
        }

            .hero h1 {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 3em;
            }

        .menu {
            display: flex;
            justify-content: space-around;
            margin: 40px 0;
        }

        .menu-item {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            width: 30%;
        }

            .menu-item h2 {
                color: #ff6b6b;
            }

        footer {
            background: #343a40;
            color: white;
            text-align: center;
            padding: 10px 0;
            position: relative;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>

    <header>
        @* Restaurant Name *@
        <h1>@restaurantName[current]</h1>
        <nav>
            <a href="#about">About</a>
            <a href="#menu">Menu</a>
            <a href="#contact">Contact</a>
        </nav>
    </header>

    <section class="hero">
        <h1>Welcome to Our Restaurant</h1>
    </section>

    <div class="container">
        <section id="about">
            <h2>About Us</h2>
            <p>Welcome to our restaurant, where we serve delicious food made from the freshest ingredients. Join us for an unforgettable dining experience!</p>
        </section>

        <section id="menu">
            <h2>Our Menu</h2>
            <div class="menu">
                <div class="menu-item">
                    <h2>@Model.Dishes[dish1index].Name</h2>
                    <p>@Model.Dishes[dish1index].Description</p>
                    <p>$@Model.Dishes[dish1index].Price</p>
                </div>
                <div class="menu-item">
                    <h2>@Model.Dishes[dish2index].Name</h2>
                    <p>@Model.Dishes[dish2index].Description</p>
                    <p>$@Model.Dishes[dish2index].Price</p>
                </div>
                <div class="menu-item">
                    <h2>@Model.Dishes[dish3index].Name</h2>
                    <p>@Model.Dishes[dish3index].Description</p>
                    <p>$@Model.Dishes[dish3index].Price</p>
                </div>
            </div>
        </section>

        <section id="contact">
            <h2>Contact Us</h2>
            <p>Email: @eMail[current]</p>
            <p>Phone: @phone[current]</p>
        </section>
    </div>

    <footer>
        <p>&copy; @DateTime.Today.Year @restaurantName[current]. All rights reserved.</p>
    </footer>

</body>
</html>